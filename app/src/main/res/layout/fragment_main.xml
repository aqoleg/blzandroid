<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText android:id="@+id/createKey" android:layout_width="match_parent" android:layout_height="50dp"
            android:inputType="text" android:hint="@string/key" />
        <EditText android:id="@+id/createValue" android:layout_width="match_parent" android:layout_height="50dp"
            android:inputType="text" android:imeOptions="actionDone" android:hint="@string/value" />
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/createResult" android:layout_width="0dp" android:layout_height="match_parent"
                android:layout_weight="1" android:padding="4dp" android:gravity="center" />
            <TextView android:id="@+id/create" android:layout_width="80dp" android:layout_height="match_parent"
                android:padding="8dp" android:gravity="center" android:text="@string/create"
                android:textColor="@android:color/white" android:background="@color/colorMain" />
        </LinearLayout>
        <FrameLayout android:layout_width="match_parent" android:layout_height="3dp"
            android:background="@android:color/black" />
        <EditText android:id="@+id/readKey" android:layout_width="match_parent" android:layout_height="50dp"
            android:inputType="text" android:imeOptions="actionDone" android:hint="@string/key" />
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/readResult" android:layout_width="0dp" android:layout_height="match_parent"
                android:layout_weight="1" android:padding="4dp" android:gravity="center" />
            <TextView android:id="@+id/read" android:layout_width="80dp" android:layout_height="match_parent"
                android:padding="8dp" android:gravity="center" android:text="@string/read"
                android:textColor="@android:color/white" android:background="@color/colorMain" />
        </LinearLayout>
        <FrameLayout android:layout_width="match_parent" android:layout_height="3dp"
            android:background="@android:color/black" />
        <EditText android:id="@+id/updateKey" android:layout_width="match_parent" android:layout_height="50dp"
            android:inputType="text" android:hint="@string/key" />
        <EditText android:id="@+id/updateValue" android:layout_width="match_parent" android:layout_height="50dp"
            android:inputType="text" android:imeOptions="actionDone" android:hint="@string/value" />
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/updateResult" android:layout_width="0dp" android:layout_height="match_parent"
                android:layout_weight="1" android:padding="4dp" android:gravity="center" />
            <TextView android:id="@+id/update" android:layout_width="80dp" android:layout_height="match_parent"
                android:padding="8dp" android:gravity="center" android:text="@string/update"
                android:textColor="@android:color/white" android:background="@color/colorMain" />
        </LinearLayout>
        <FrameLayout android:layout_width="match_parent" android:layout_height="3dp"
            android:background="@android:color/black" />
        <EditText android:id="@+id/deleteKey" android:layout_width="match_parent" android:layout_height="50dp"
            android:inputType="text" android:imeOptions="actionDone" android:hint="@string/key" />
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/deleteResult" android:layout_width="0dp" android:layout_height="match_parent"
                android:layout_weight="1" android:padding="4dp" android:gravity="center" />
            <TextView android:id="@+id/delete" android:layout_width="80dp" android:layout_height="match_parent"
                android:padding="8dp" android:gravity="center" android:text="@string/delete"
                android:textColor="@android:color/white" android:background="@color/colorMain" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>